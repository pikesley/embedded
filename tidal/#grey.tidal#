import Sound.Tidal.Vis
import qualified Graphics.Rendering.Cairo as C 
import Graphics.Rendering.Cairo
import Data.Colour
import Data.Colour.Names
import Data.Colour.SRGB



let wrap :: String -> String
    wrap [] = []
    wrap s = (take 38 s) ++ "\n" ++ (wrap (drop 38 s))
    drawText description pat =
      do let w = 384
             h = 288
         withSVGSurface ("text.svg") 384 288 $ \surf -> do
            renderWith surf $ do
              C.save 
              C.scale (fromIntegral h) (fromIntegral h)
              C.setOperator C.OperatorOver
              C.setSourceRGB 0 0 0 
              C.rectangle 0 0 1 1
              C.fill
              mapM_ renderEvent (events pat)
              C.restore 
              return ()
              save
              setSourceRGB 0 0 0
              selectFontFace "Terminal Dosis" FontSlantNormal FontWeightNormal
              setFontSize 20
              moveTo 365 10
              rotate (pi/ 2)
              textPath description
              fill
              restore
         rawSystem "inkscape" ["--without-gui", "--export-pdf=text.pdf", "text.svg"]
in drawText (wrap "foldEvery [3,5] (slow 2) $ density 16 $ \"grey black\"") $ foldEvery [3,5] (slow 2) $ density 16 $ "grey black"



:t rotate

let tmpfn = "out.svg"
    fn = "out.pdf"
    vis pat = do vLines (C.withSVGSurface) tmpfn (400,400) pat 10 10
                 rawSystem "/home/alex/Dropbox/bin/fixsvg.pl" [tmpfn]
                 rawSystem "convert" [tmpfn, fn]
                 return ()
    visgrid pat = vLines (C.withSVGSurface) fn (600,600) pat 10 20


vis $ foldEvery [3,5] (slow 2) $ density 16 $ "grey black"

vis $ foldEvery [3,5,7] (slow 4) $ density 16 $ "white black"

