d2 $ sound "[drum:6*4 ! ! [drum:6*8 drum:6*3]/2]/4"

d3 $ juxBy 0.6 (|*| speed "2") $ slowspread (stretch) [4,6,2,3] $ chop 12 $ sound "fm:14" # unit "c"
  |*| speed "[1]"
  # cutoff (slow 4 $ scale 1000 3000 sine1)
