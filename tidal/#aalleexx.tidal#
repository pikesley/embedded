
d1 $ sound "cp*8"
  # hcutoff (slow 4 $ scale 500 10000 sine1)

-- |*|

d1 $ speed "2 [3 1] 4 0.5" # sound "arpy newnotes" |*| speed "[1 2 3]/3" 

-- off

d1 $ off 0.25 (# speed "2") $ sound "arpy arpy:3"

-- (same as these together )
d1 $ sound "arpy arpy:3"
d2 $ 0.25 ~> (sound "arpy arpy:3" # speed "2")

-- (good to do more than one 'off' with different offets)
d1 $ off 0.25 (# speed "2") $ off 0.125 (# crush "3") $ sound "feel [~ feel:2] bd*2 ~"

-- runWith

d1 $ jux rev $ runWith 4 (striate 64) $ sound "bd*3 sn:2 feel*2 [~ future]"

d1 $ sound "bd sn:2 feel [~ future]"

-- randcat - like slowcat but plays in random order

d1 $ randcat [sound "bd sn:2",
              n "0 [2 3] 1 2" # s "arpy",
              sound "cp"
             ]

-- sound breaks down into s and n

d1 $ sound "arpy:2 arpy:4 arpy:2"

d1 $ n "2 4 2" # s "arpy" |+| n "1 2"
