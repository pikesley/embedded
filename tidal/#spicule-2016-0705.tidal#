
x1 $ jux (rev . chop 8) $ slow 4 $ sound "bd8:3*3 ~ bd8:6*8 ~"
  # speed "0.8"
  # room "0.8"
  # size "0.8"
  # orbit "1"

x2 $ jux (1 <~) $ slowspread (slow) [1,1.5,3] $ off 0.125 (|*| speed "2") $ sound "sd8:3 [sd8 sd8:5(3,8,[0 4 2]/3)]/2"
  # speed "2"  # orbit "0"
  
x3 $ chop 8 $ s "[lt8*2 lt8*4]/2 mt8*3"